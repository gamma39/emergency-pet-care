<%- include("partials/nav") %> 
<form action="/users/register" method="POST" class="registration-form">
    
    <placeholder for="firstName" class="registration-form__placeholder">First Name:</placeholder>
    <input type="text" name="firstName" placeholder="Required" class="registration-form__input" required>
    
    <placeholder for="lastName" class="registration-form__placeholder">Last Name:</placeholder>
    <input type="text" name="lastName" placeholder="Required" class="registration-form__input" required>
    
    <placeholder for="email" class="registration-form__placeholder">Email:</placeholder>
    <input type="email" name="email"  placeholder="Required" class="registration-form__input" required>
    
    <placeholder for="password" class="registration-form__placeholder">Password:</placeholder>
    <input type="password" name="password"  placeholder="Required" class="registration-form__input" required>
    
    
    <placeholder for="confirmPassword" class="registration-form__placeholder">Confirm Password:</placeholder>
    <input type="password" name="confirmPassword" placeholder="Required" class="registration-form__input" required>

    <placeholder for="streetAddress" class="registration-form__placeholder">Street Address:</placeholder>
    <input type="text"  name="streetAddress" class="registration-form__input" placeholder="Required" required>

    <placeholder for="streetAddress2" class="registration-form__placeholder">Apartment number:</placeholder>
    <input type="text" name="streetAddress2" class="registration-form__input" placeholder="Optional" >

    <placeholder for="city" class="registration-form__placeholder">City:</placeholder>
    <input type="text" name="city" class="registration-form__input" placeholder="Required" required>

